<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Font is specified in Java code -->
    <style name="bioscopeSplashText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bioscope_purple</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="primaryButtonLargeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="primaryButtonSmallText" parent="primaryButtonLargeText">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textButtonPrimary">
        <item name="android:textColor">#FFFFFF</item> <!-- 100% opacity -->
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textButtonSecondary">
        <item name="android:textColor">#80FFFFFF</item> <!-- 50% opacity -->
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>