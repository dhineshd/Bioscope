<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    android:paddingBottom="0px"
    android:background="#92d2c2"
    tools:context="com.trioscope.chameleon.fragment.SendConnectionInfoFragment">

    <TextView
        android:id="@+id/textView_sender_connection_status"
        android:background="@null"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_alignLeft="@+id/send_conn_info_prog_bar"
        android:layout_alignTop="@+id/send_conn_info_prog_bar"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/send_conn_info_prog_bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"
        android:indeterminate="true"
        android:max="100"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        />

    <ProgressBar
        android:id="@+id/send_conn_info_prog_bar_max"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"
        android:max="100"
        android:progress="100"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:progressDrawable="@drawable/circular_progress_bar"
        />

</RelativeLayout>
