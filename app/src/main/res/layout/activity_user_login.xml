<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bioscope_teal"
    tools:context="com.trioscope.chameleon.activity.UserLoginActivity">


    <!-- android:textColorHint="#80ffffff"  80ffffff (80 represent 50% opacity) -->
    <EditText
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:inputType="textPersonName"
        android:layout_marginTop="198dp"
        android:hint="Username"
        android:id="@+id/editUserNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:background="@drawable/username_edit_text_border_shape"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="12dp"
        android:paddingRight="48dp"
        android:textColor="#ffffff"
        android:textColorHint="#80ffffff"
        android:textSize="18dp"
        android:fontFamily="sans-serif-condensed"
        />

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="12dp"
        android:id="@+id/enterNameButton"
        android:layout_alignRight="@+id/editUserNameText"
        android:layout_alignTop="@+id/editUserNameText"
        android:src="@drawable/next_icon_4x"
        android:visibility="invisible"
        android:background="@null"
        android:scaleType="center"
    />

</RelativeLayout>
