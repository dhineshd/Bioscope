<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0px"
    android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    tools:context="com.trioscope.chameleon.activity.PreviewMergeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/surfaceview_major_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="108dp"
            android:layout_height="192dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="48dp"
            android:padding="2dp"
            android:background="@drawable/border_image">

            <SurfaceView
                android:id="@+id/surfaceview_minor_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <com.trioscope.chameleon.views.PrimaryButton
            android:id="@+id/button_merge"
            android:background="@drawable/primary_button_small_background"
            android:stateListAnimator="@anim/button_elevation_anim"
            android:layout_width="78dp"
            android:layout_height="78dp"
            style="@style/primaryButtonSmallText"
            android:layout_marginBottom="36dp"
            android:layout_gravity="bottom|center"
            android:text="Save" />

        <ImageButton
            android:id="@+id/button_swap_merge_preview"
            android:src="@drawable/reverse_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="36dp"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|right"
            android:background="@null" />

        <TextView
            android:id="@+id/textView_touch_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Touch to replay"
            android:textSize="20sp"
            android:textColor="#80FFFFFF"
            android:visibility="invisible"/>

    </FrameLayout>

</RelativeLayout>
