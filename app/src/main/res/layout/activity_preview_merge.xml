<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0px"
    android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    tools:context="com.trioscope.chameleon.activity.PreviewMergeActivity">


    <TextureView
        android:id="@+id/textureview_major_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="112dp"
        android:layout_height="189dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="148dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/border_image"
        android:visibility="visible" />

    <TextureView
        android:id="@+id/textureview_minor_video"
        android:layout_width="109dp"
        android:layout_height="186dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="148dp"
        android:layout_marginLeft="18dp" />


    <TextView
        android:id="@+id/textView_touch_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Touch to replay"
        android:textColor="#80FFFFFF"
        android:textSize="20sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:paddingRight="18dp">


        <ImageButton
            android:id="@+id/button_swap_merge_preview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/swap_videos" />

        <SeekBar
            android:id="@+id/merge_preview_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:max="100" />

        <com.trioscope.chameleon.views.PrimaryButton
            android:id="@+id/button_merge"
            style="@style/primaryButtonSmallText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:background="@drawable/primary_button_small_background"
            android:stateListAnimator="@anim/button_elevation_anim"
            android:text="Save" />
    </LinearLayout>


</RelativeLayout>
