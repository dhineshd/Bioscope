<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0px"
    android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_main_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bioscope_teal"/>

        <ImageView
            android:id="@+id/direct_logo"
            android:transitionName="logo"
            android:src="@drawable/direct_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <com.trioscope.chameleon.views.PrimaryButton
            android:id="@+id/button_main_start_session"
            android:background="@drawable/primary_button_large_background"
            android:stateListAnimator="@anim/button_elevation_anim"
            style="@style/primaryButtonLargeText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="248dp"
            android:text="Direct" />

        <ImageButton
            android:id="@+id/button_main_library"
            android:src="@drawable/direct_uparrow"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp"
            />

</RelativeLayout>


